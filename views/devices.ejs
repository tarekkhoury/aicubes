                     <button id="updateDevice<%= device.value %>d" onclick="clickButton(this.id)" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-pencil"></span></button>
                    <button id="deleteDevice<%= device.value %>d" onclick="clickButton(this.id)" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-trash"></span></button></td>

                </tr>

            <% })%>

                </tbody>
            </table>

            <h2>Components</h2>
            <p>List of Devices </p>


                    <table  class="table">
                        <thead>


                        <tr class="active ">
                            <th>Device ID</th>
